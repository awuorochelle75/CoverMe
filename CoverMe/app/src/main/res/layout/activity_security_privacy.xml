<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Security Options -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security Options"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Two-Factor Authentication"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Biometric Authentication"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Active Sessions"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Security Questions"/>
        </LinearLayout>

        <!-- Privacy Options -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Options"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Privacy Policy"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Permissions"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download Personal Data"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Account"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ad Preferences"/>
        </LinearLayout>

        <!-- Notifications -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Security Alerts"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Privacy Alerts"/>
        </LinearLayout>

        <!-- Additional Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Information"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Recent Activity"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Support"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Security Tips"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
