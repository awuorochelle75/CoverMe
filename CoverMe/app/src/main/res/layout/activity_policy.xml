<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Heading for the screen -->
        <TextView
            android:id="@+id/text_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW POLICY"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"/>

        <!-- Display policy details -->
        <TextView
            android:id="@+id/policyDetailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- EditText for updating policy details -->
        <EditText
            android:id="@+id/et_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Full Name"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Date of Birth"
            android:inputType="date"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_id_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="ID Number"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_permanent_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Permanent Address"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Code"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_kra_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="KRA PIN"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_email_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Height"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/edit_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Weight"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_beneficiary_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Beneficiary Name"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_beneficiary_relationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Beneficiary Relationship"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/edit_beneficiary_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Beneficiary Date of Birth"
            android:inputType="date"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/edit_beneficiary_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Beneficiary Mobile"
            android:inputType="phone"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_nominee_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Nominee Name"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_nominee_relationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Nominee Relationship"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_nominee_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Nominee Date of Birth"
            android:inputType="date"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_nominee_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Nominee Mobile Number"
            android:inputType="phone"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Bank Name"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_service_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Service No./Payroll No."
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_branch_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Branch/Department"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_account_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Account No"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_policy_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Policy Description"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Term"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />



    </LinearLayout>
</ScrollView>
